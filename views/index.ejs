<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timetable Generator - Upload Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px 0;
        }

        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .header-section {
            text-align: center;
            color: white;
            margin-bottom: 50px;
            animation: fadeInDown 0.8s ease;
        }

        .header-section h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .header-section p {
            font-size: 1.3rem;
            opacity: 0.95;
        }

        .upload-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }

        .upload-card {
            background: white;
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.8s ease backwards;
        }

        .upload-card:nth-child(1) { animation-delay: 0.1s; }
        .upload-card:nth-child(2) { animation-delay: 0.2s; }
        .upload-card:nth-child(3) { animation-delay: 0.3s; }

        .upload-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: var(--primary-gradient);
        }

        .upload-card:nth-child(2)::before {
            background: var(--secondary-gradient);
        }

        .upload-card:nth-child(3)::before {
            background: var(--success-gradient);
        }

        .upload-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 30px 60px rgba(0,0,0,0.15);
        }

        .upload-icon {
            width: 70px;
            height: 70px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin-bottom: 20px;
            color: white;
        }

        .upload-icon.courses {
            background: var(--primary-gradient);
        }

        .upload-icon.faculty {
            background: var(--secondary-gradient);
        }

        .upload-icon.rooms {
            background: var(--success-gradient);
        }

        .upload-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: #2d3748;
        }

        .upload-area {
            border: 2px dashed #cbd5e0;
            border-radius: 12px;
            padding: 30px;
            text-align: center;
            margin: 20px 0;
            transition: all 0.3s ease;
            cursor: pointer;
            background: #f7fafc;
        }

        .upload-area:hover {
            border-color: #667eea;
            background: #edf2ff;
        }

        .upload-area.dragover {
            border-color: #667eea;
            background: #e0e7ff;
            transform: scale(1.02);
        }

        .upload-area i {
            font-size: 3rem;
            color: #a0aec0;
            margin-bottom: 15px;
        }

        .file-input {
            display: none;
        }

        .upload-btn {
            background: var(--primary-gradient);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

        .upload-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .upload-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .file-info {
            margin-top: 10px;
            padding: 10px;
            background: #f0f4f8;
            border-radius: 8px;
            font-size: 0.9rem;
            color: #4a5568;
            display: none;
        }

        .instructions-card {
            background: white;
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            margin-bottom: 40px;
            animation: fadeInUp 0.8s ease 0.4s backwards;
        }

        .instructions-card h3 {
            color: #2d3748;
            margin-bottom: 20px;
            font-size: 1.8rem;
        }

        .instruction-list {
            list-style: none;
            padding: 0;
        }

        .instruction-list li {
            padding: 12px 0;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
        }

        .instruction-list li:last-child {
            border-bottom: none;
        }

        .instruction-list i {
            color: #667eea;
            margin-right: 15px;
            font-size: 1.2rem;
        }

        .action-section {
            text-align: center;
            margin: 50px 0;
            animation: fadeInUp 0.8s ease 0.6s backwards;
        }

        .generate-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 20px 60px;
            border-radius: 50px;
            font-size: 1.3rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 15px 30px rgba(102, 126, 234, 0.4);
            position: relative;
            overflow: hidden;
        }

        .generate-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .generate-btn:hover::before {
            left: 100%;
        }

        .generate-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(102, 126, 234, 0.5);
        }

        .view-btn {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
            padding: 15px 40px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-left: 20px;
        }

        .view-btn:hover {
            background: #667eea;
            color: white;
            transform: translateY(-3px);
        }

        .alert-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            max-width: 400px;
        }

        .custom-alert {
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            animation: slideInRight 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .custom-alert.success {
            background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
            color: #0d5f3f;
        }

        .custom-alert.error {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: #721c24;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        .progress-container {
            margin-top: 15px;
            display: none;
        }

        .progress {
            height: 8px;
            border-radius: 10px;
            overflow: hidden;
            background: #e2e8f0;
        }

        .progress-bar {
            background: var(--primary-gradient);
            transition: width 0.3s ease;
        }
    </style>
</head>
<body>
    <div class="alert-container" id="alertContainer"></div>

    <div class="main-container">
        <div class="header-section">
            <h1><i class="bi bi-calendar3"></i> Timetable Generator</h1>
            <p>Intelligent Academic Scheduling System</p>
        </div>

        <div class="instructions-card">
            <h3><i class="bi bi-info-circle"></i> CSV Format Requirements</h3>
            <ul class="instruction-list">
                <li><i class="bi bi-file-earmark-text"></i> <strong>Courses:</strong> code, name, faculty, duration, type, branch, year, credits, semesterHalf, electiveBasket, isElective, ltp, priority, consecutiveSlots</li>
                <li><i class="bi bi-people"></i> <strong>Faculty:</strong> name, department, availability, maxHoursPerDay, preferredDays, preferredTimeSlots</li>
                <li><i class="bi bi-house"></i> <strong>Rooms:</strong> number, capacity, type, equipment, department</li>
                <li><i class="bi bi-lightning"></i> <strong>Branches:</strong> CSE, DSAI, ECE | <strong>Years:</strong> 1, 2, 3, 4</li>
            </ul>
        </div>

        <div class="upload-grid">
            <div class="upload-card">
                <div class="upload-icon courses">
                    <i class="bi bi-book"></i>
                </div>
                <h3>Upload Courses</h3>
                <div class="upload-area" id="coursesUploadArea">
                    <i class="bi bi-cloud-upload"></i>
                    <p>Drag & drop CSV file here or click to browse</p>
                    <input type="file" id="coursesFile" class="file-input" accept=".csv">
                </div>
                <div class="file-info" id="coursesFileInfo"></div>
                <button class="upload-btn" id="uploadCoursesBtn" disabled>
                    <i class="bi bi-upload"></i> Upload Courses
                </button>
                <div class="progress-container">
                    <div class="progress">
                        <div class="progress-bar" style="width: 0%"></div>
                    </div>
                </div>
            </div>

            <div class="upload-card">
                <div class="upload-icon faculty">
                    <i class="bi bi-person-badge"></i>
                </div>
                <h3>Upload Faculty</h3>
                <div class="upload-area" id="facultyUploadArea">
                    <i class="bi bi-cloud-upload"></i>
                    <p>Drag & drop CSV file here or click to browse</p>
                    <input type="file" id="facultyFile" class="file-input" accept=".csv">
                </div>
                <div class="file-info" id="facultyFileInfo"></div>
                <button class="upload-btn" id="uploadFacultyBtn" disabled>
                    <i class="bi bi-upload"></i> Upload Faculty
                </button>
                <div class="progress-container">
                    <div class="progress">
                        <div class="progress-bar" style="width: 0%"></div>
                    </div>
                </div>
            </div>

            <div class="upload-card">
                <div class="upload-icon rooms">
                    <i class="bi bi-door-open"></i>
                </div>
                <h3>Upload Rooms</h3>
                <div class="upload-area" id="roomsUploadArea">
                    <i class="bi bi-cloud-upload"></i>
                    <p>Drag & drop CSV file here or click to browse</p>
                    <input type="file" id="roomsFile" class="file-input" accept=".csv">
                </div>
                <div class="file-info" id="roomsFileInfo"></div>
                <button class="upload-btn" id="uploadRoomsBtn" disabled>
                    <i class="bi bi-upload"></i> Upload Rooms
                </button>
                <div class="progress-container">
                    <div class="progress">
                        <div class="progress-bar" style="width: 0%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="action-section">
            <button class="generate-btn" id="generateBtn">
                <i class="bi bi-magic"></i> Generate Timetable
            </button>
            <button class="view-btn" onclick="window.location.href='/view'">
                <i class="bi bi-eye"></i> View Timetable
            </button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // File upload handling
        function setupFileUpload(uploadAreaId, fileInputId, fileInfoId, uploadBtnId, uploadUrl) {
            const uploadArea = document.getElementById(uploadAreaId);
            const fileInput = document.getElementById(fileInputId);
            const fileInfo = document.getElementById(fileInfoId);
            const uploadBtn = document.getElementById(uploadBtnId);
            const progressBar = uploadBtn.nextElementSibling.querySelector('.progress-bar');

            // Drag and drop
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('dragover');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('dragover');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('dragover');
                if (e.dataTransfer.files.length) {
                    fileInput.files = e.dataTransfer.files;
                    handleFileSelect(e.dataTransfer.files[0], fileInfo, uploadBtn);
                }
            });

            uploadArea.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', (e) => {
                if (e.target.files.length) {
                    handleFileSelect(e.target.files[0], fileInfo, uploadBtn);
                }
            });

            uploadBtn.addEventListener('click', () => {
                if (!fileInput.files.length) return;
                
                const formData = new FormData();
                formData.append('file', fileInput.files[0]);
                
                uploadBtn.disabled = true;
                uploadBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Uploading...';
                progressBar.parentElement.style.display = 'block';
                
                // Simulate progress
                let progress = 0;
                const interval = setInterval(() => {
                    progress += 10;
                    progressBar.style.width = `${progress}%`;
                    if (progress >= 90) clearInterval(interval);
                }, 200);
                
                fetch(uploadUrl, {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    progressBar.style.width = '100%';
                    setTimeout(() => {
                        progressBar.parentElement.style.display = 'none';
                        uploadBtn.disabled = false;
                        uploadBtn.innerHTML = '<i class="bi bi-upload"></i> Upload';
                        fileInput.value = '';
                        fileInfo.style.display = 'none';
                        
                        showAlert(data.message || data.error, data.error ? 'error' : 'success');
                    }, 500);
                })
                .catch(error => {
                    progressBar.parentElement.style.display = 'none';
                    uploadBtn.disabled = false;
                    uploadBtn.innerHTML = '<i class="bi bi-upload"></i> Upload';
                    showAlert('Upload failed: ' + error.message, 'error');
                });
            });
        }

        function handleFileSelect(file, fileInfo, uploadBtn) {
            const fileSize = (file.size / 1024).toFixed(2);
            fileInfo.innerHTML = `<i class="bi bi-file-earmark-text"></i> ${file.name} (${fileSize} KB)`;
            fileInfo.style.display = 'block';
            uploadBtn.disabled = false;
        }

        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `custom-alert ${type}`;
            alert.innerHTML = `
                <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-circle'}"></i>
                <span>${message}</span>
            `;
            alertContainer.appendChild(alert);
            
            setTimeout(() => {
                alert.style.animation = 'slideInRight 0.3s ease reverse';
                setTimeout(() => alert.remove(), 300);
            }, 3000);
        }

        // Initialize file uploads
        setupFileUpload('coursesUploadArea', 'coursesFile', 'coursesFileInfo', 'uploadCoursesBtn', '/upload/courses');
        setupFileUpload('facultyUploadArea', 'facultyFile', 'facultyFileInfo', 'uploadFacultyBtn', '/upload/faculty');
        setupFileUpload('roomsUploadArea', 'roomsFile', 'roomsFileInfo', 'uploadRoomsBtn', '/upload/rooms');

        // Generate timetable
        document.getElementById('generateBtn').addEventListener('click', () => {
            const btn = document.getElementById('generateBtn');
            btn.disabled = true;
            btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Generating...';
            
            fetch('/generate', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-magic"></i> Generate Timetable';
                    showAlert(data.message || data.error, data.error ? 'error' : 'success');
                    if (!data.error) {
                        setTimeout(() => window.location.href = '/view', 2000);
                    }
                })
                .catch(error => {
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-magic"></i> Generate Timetable';
                    showAlert('Generation failed: ' + error.message, 'error');
                });
        });
    </script>
</body>
</html>