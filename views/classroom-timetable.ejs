<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classroom Timetables</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1800px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5em;
        }

        .actions {
            text-align: center;
            margin-bottom: 30px;
        }

        .btn {
            padding: 12px 30px;
            margin: 0 10px;
            border: none;
            border-radius: 25px;
            font-size: 1em;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #764ba2;
            transform: translateY(-2px);
        }

        .btn-success {
            background: #28a745;
            color: white;
        }

        .btn-success:hover {
            background: #218838;
        }

        .info-box {
            background: #fff3cd;
            border-left: 4px solid #ffc107;
            padding: 15px 20px;
            margin-bottom: 25px;
            border-radius: 8px;
        }

        .info-box h3 {
            color: #856404;
            margin-bottom: 8px;
            font-size: 1.1em;
        }

        .info-box p {
            color: #856404;
            margin: 5px 0;
        }

        /* Room Tabs */
        .room-tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 25px;
            flex-wrap: wrap;
            max-height: 400px;
            overflow-y: auto;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
        }

        .room-tab {
            padding: 12px 25px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: 2px solid #dee2e6;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            font-size: 1em;
            color: #495057;
            min-width: 120px;
            text-align: center;
        }

        .room-tab:hover {
            background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
            transform: translateY(-2px);
        }

        .room-tab.active {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
            color: white;
            border-color: #ff6b6b;
            box-shadow: 0 4px 8px rgba(255, 107, 107, 0.3);
        }

        .room-tab .usage-info {
            font-size: 0.85em;
            opacity: 0.9;
            margin-top: 3px;
        }

        .room-content {
            display: none;
        }

        .room-content.active {
            display: block;
            animation: fadeIn 0.3s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Semester Half Tabs */
        .semester-tabs {
            display: flex;
            gap: 15px;
            margin: 20px 0;
            justify-content: center;
        }

        .semester-tab {
            padding: 12px 50px;
            background: #fff3cd;
            border: 2px solid #ffc107;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            font-size: 1.1em;
            color: #856404;
        }

        .semester-tab:hover {
            background: #ffe69c;
            border-color: #ffb800;
        }

        .semester-tab.active {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
            color: white;
            border-color: #ffc107;
            box-shadow: 0 3px 6px rgba(255, 193, 7, 0.4);
        }

        .semester-content {
            display: none;
        }

        .semester-content.active {
            display: block;
            animation: fadeIn 0.3s ease-in;
        }

        .timetable-header {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
            color: white;
            padding: 20px;
            border-radius: 10px 10px 0 0;
            margin-bottom: 0;
            margin-top: 20px;
        }

        .timetable-wrapper {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 0;
            font-size: 0.85em;
        }

        th {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
            color: white;
            padding: 15px 8px;
            text-align: center;
            font-weight: 600;
            position: sticky;
            top: 0;
            z-index: 10;
            min-width: 120px;
        }

        th:first-child {
            position: sticky;
            left: 0;
            z-index: 11;
            min-width: 100px;
        }

        th.break-slot {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            font-style: italic;
        }

        td {
            padding: 12px 8px;
            text-align: center;
            border: 1px solid #dee2e6;
            min-width: 120px;
            vertical-align: middle;
        }

        td:first-child {
            background: #f8f9fa;
            font-weight: 600;
            color: #ff6b6b;
            position: sticky;
            left: 0;
            z-index: 9;
        }

        td[colspan]:not([colspan="1"]) {
            font-size: 0.95em;
            padding: 15px 10px;
        }

        td[colspan]:not([colspan="1"]) .course-name {
            font-size: 1.15em;
            font-weight: 700;
        }

        td.break-time {
            background: repeating-linear-gradient(
                45deg,
                #f8f9fa,
                #f8f9fa 10px,
                #e9ecef 10px,
                #e9ecef 20px
            );
            color: #6c757d;
            font-style: italic;
            font-weight: 600;
        }

        .lecture {
            background: #cfe2ff;
            border-left: 4px solid #0d6efd;
        }

        .lab {
            background: #f8d7da;
            border-left: 4px solid #dc3545;
        }

        .tutorial {
            background: #d1e7dd;
            border-left: 4px solid #198754;
        }

        .course-name {
            font-weight: 600;
            display: block;
            margin-bottom: 3px;
        }

        .slot-info {
            font-size: 0.75em;
            display: block;
            margin-top: 3px;
            color: #666;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin: 20px 0;
        }

        .stat-card {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            border-left: 4px solid #667eea;
            text-align: center;
        }

        .stat-card h4 {
            color: #667eea;
            margin-bottom: 5px;
            font-size: 0.9em;
        }

        .stat-card .stat-value {
            font-size: 1.8em;
            font-weight: 700;
            color: #333;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #666;
            font-size: 1.2em;
        }

        .legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
            flex-wrap: wrap;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.9em;
        }

        .legend-box {
            width: 20px;
            height: 20px;
            border-radius: 4px;
        }

        @media print {
            body {
                background: white;
            }
            .container {
                box-shadow: none;
            }
            .actions, .room-tabs, .semester-tabs, .info-box {
                display: none;
            }
            .room-content, .semester-content {
                display: block !important;
                page-break-after: always;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üè´ Classroom Timetables</h1>
        
        <div class="info-box">
            <h3>üèõÔ∏è Room Utilization Overview</h3>
            <p>View which classes are scheduled in each classroom throughout the week. Select a room to see its complete schedule for both semester halves.</p>
        </div>
        
        <div class="legend">
            <div class="legend-item">
                <div class="legend-box lecture"></div>
                <span>Lecture (90 mins)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box tutorial"></div>
                <span>Tutorial (60 mins)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box lab"></div>
                <span>Lab (120 mins)</span>
            </div>
        </div>
        
        <div class="actions">
            <a href="/" class="btn btn-primary">‚Üê Back to Upload</a>
            <a href="/view" class="btn btn-primary">üìö Student Timetables</a>
            <a href="/view-faculty" class="btn btn-primary">üë®‚Äçüè´ Faculty Timetables</a>
            <button class="btn btn-success" onclick="window.location.href='/download-classrooms'">üì• Download CSV</button>
            <button class="btn btn-primary" onclick="window.print()">üñ®Ô∏è Print All</button>
        </div>

        <% 
        const hasData = typeof classroomTimetables !== 'undefined' && 
                        classroomTimetables !== null && 
                        Object.keys(classroomTimetables).length > 0;
        
        const allTimeSlots = [
            '09:00 - 10:00',
            '10:00 - 10:30',
            { slot: '10:30 - 10:45', isBreak: true, label: 'BREAK' },
            '10:45 - 11:00',
            '11:00 - 12:00',
            '12:00 - 12:15',
            '12:15 - 12:30',
            '12:30 - 13:15',
            { slot: '13:15 - 14:00', isBreak: true, label: 'LUNCH' },
            '14:00 - 14:30',
            '14:30 - 15:30',
            '15:30 - 15:40',
            '15:40 - 16:00',
            '16:00 - 16:30',
            '16:30 - 17:10'
        ];
        %>
        
        <% if (!hasData) { %>
            <div class="no-data">
                üî≠ No timetable generated yet.<br>
                Please upload data and generate a timetable first.
            </div>
        <% } else { %>
            <!-- Room Tabs -->
            <div class="room-tabs">
                <% sortedRooms.forEach((room, roomIndex) => { 
                    const roomData = classroomTimetables[room];
                    const totalSlots = (roomData.First_Half?.length || 0) + (roomData.Second_Half?.length || 0);
                    const utilizationPercent = Math.round((totalSlots / (days.length * allTimeSlots.filter(s => typeof s === 'string').length * 2)) * 100);
                %>
                    <div class="room-tab <%= roomIndex === 0 ? 'active' : '' %>" 
                         onclick="showRoom('room-<%= room.replace(/[^a-zA-Z0-9]/g, '-') %>')">
                        üè´ <%= room %>
                        <div class="usage-info">
                            <%= totalSlots %> slots | <%= utilizationPercent %>% used
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Room Contents -->
            <% sortedRooms.forEach((room, roomIndex) => { 
                const roomData = classroomTimetables[room];
                const roomId = room.replace(/[^a-zA-Z0-9]/g, '-');
            %>
                <div id="room-<%= roomId %>" class="room-content <%= roomIndex === 0 ? 'active' : '' %>">
                    
                    <!-- Stats Grid -->
                    <div class="stats-grid">
                        <div class="stat-card">
                            <h4>First Half Classes</h4>
                            <div class="stat-value"><%= roomData.First_Half?.length || 0 %></div>
                        </div>
                        <div class="stat-card">
                            <h4>Second Half Classes</h4>
                            <div class="stat-value"><%= roomData.Second_Half?.length || 0 %></div>
                        </div>
                        <div class="stat-card">
                            <h4>Total Classes</h4>
                            <div class="stat-value"><%= (roomData.First_Half?.length || 0) + (roomData.Second_Half?.length || 0) %></div>
                        </div>
                        <div class="stat-card">
                            <h4>Unique Courses</h4>
                            <div class="stat-value">
                                <% 
                                const uniqueCourses = new Set();
                                if (roomData.First_Half) {
                                    roomData.First_Half.forEach(e => uniqueCourses.add(e.course.split(' - ')[0]));
                                }
                                if (roomData.Second_Half) {
                                    roomData.Second_Half.forEach(e => uniqueCourses.add(e.course.split(' - ')[0]));
                                }
                                %>
                                <%= uniqueCourses.size %>
                            </div>
                        </div>
                    </div>

                    <!-- Semester Half Tabs -->
                    <div class="semester-tabs">
                        <div class="semester-tab active" 
                             onclick="showSemester('room-<%= roomId %>-first')">
                            üìÖ First Half (Pre-Mid)
                            <div style="font-size: 0.85em; opacity: 0.95; margin-top: 3px;">
                                <%= roomData.First_Half?.length || 0 %> classes
                            </div>
                        </div>
                        <div class="semester-tab" 
                             onclick="showSemester('room-<%= roomId %>-second')">
                            üìÖ Second Half (Post-Mid)
                            <div style="font-size: 0.85em; opacity: 0.95; margin-top: 3px;">
                                <%= roomData.Second_Half?.length || 0 %> classes
                            </div>
                        </div>
                    </div>

                    <!-- First Half Content -->
                    <div id="room-<%= roomId %>-first" class="semester-content active">
                        <% if (roomData.First_Half && roomData.First_Half.length > 0) { %>
                            <div class="timetable-header">
                                <h2 style="margin: 0;">Room <%= room %> - First Half (Pre-Mid Semester)</h2>
                                <p style="margin-top: 8px; opacity: 0.95; font-size: 1.05em;">
                                    üìä Total Slots: <%= roomData.First_Half.length %>
                                </p>
                            </div>

                            <div class="timetable-wrapper">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>DAY</th>
                                            <% allTimeSlots.forEach(slotData => { 
                                                const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                                const slot = isBreak ? slotData.slot : slotData;
                                                const label = isBreak ? slotData.label : slot;
                                            %>
                                                <th class="<%= isBreak ? 'break-slot' : '' %>">
                                                    <%= label %>
                                                </th>
                                            <% }); %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% days.forEach(day => { 
                                            const rowData = [];
                                            const processedSlots = new Set();
                                            
                                            allTimeSlots.forEach((slotData, slotIndex) => {
                                                const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                                const slot = isBreak ? slotData.slot : slotData;
                                                
                                                if (isBreak) {
                                                    rowData.push({
                                                        isBreak: true,
                                                        colspan: 1,
                                                        slot: slot
                                                    });
                                                } else if (!processedSlots.has(slotIndex)) {
                                                    const entry = roomData.First_Half.find(t => 
                                                        t.day === day && t.timeSlot === slot
                                                    );
                                                    
                                                    if (!entry) {
                                                        rowData.push({
                                                            isBreak: false,
                                                            colspan: 1,
                                                            entry: null
                                                        });
                                                    } else {
                                                        let colspan = 1;
                                                        const baseCourse = entry.course.split(' (')[0];
                                                        
                                                        for (let i = slotIndex + 1; i < allTimeSlots.length; i++) {
                                                            const nextSlotData = allTimeSlots[i];
                                                            const nextIsBreak = typeof nextSlotData === 'object' && nextSlotData.isBreak;
                                                            
                                                            if (nextIsBreak) break;
                                                            
                                                            const nextSlot = nextIsBreak ? nextSlotData.slot : nextSlotData;
                                                            
                                                            const nextEntry = roomData.First_Half.find(t => 
                                                                t.day === day && t.timeSlot === nextSlot
                                                            );
                                                            
                                                            if (nextEntry) {
                                                                const nextBaseCourse = nextEntry.course.split(' (')[0];
                                                                if (nextBaseCourse === baseCourse && 
                                                                    nextEntry.faculty === entry.faculty &&
                                                                    nextEntry.branch === entry.branch) {
                                                                    colspan++;
                                                                    processedSlots.add(i);
                                                                } else {
                                                                    break;
                                                                }
                                                            } else {
                                                                break;
                                                            }
                                                        }
                                                        
                                                        rowData.push({
                                                            isBreak: false,
                                                            colspan: colspan,
                                                            entry: entry,
                                                            baseCourse: baseCourse
                                                        });
                                                        processedSlots.add(slotIndex);
                                                    }
                                                }
                                            });
                                        %>
                                            <tr>
                                                <td><%= day %></td>
                                                <% rowData.forEach(cell => { %>
                                                    <% if (cell.isBreak) { %>
                                                        <td class="break-time" colspan="<%= cell.colspan %>">üçΩÔ∏è</td>
                                                    <% } else if (cell.entry) { 
                                                        const typeStr = (cell.entry.type || '').toLowerCase();
                                                        let className = '';
                                                        if (typeStr.includes('lab')) className = 'lab';
                                                        else if (typeStr.includes('tutorial')) className = 'tutorial';
                                                        else className = 'lecture';
                                                    %>
                                                        <td class="<%= className %>" colspan="<%= cell.colspan %>">
                                                            <span class="course-name"><%= cell.baseCourse %></span>
                                                            <span class="slot-info">üéì <%= cell.entry.branch %> Year <%= cell.entry.year %> <%= cell.entry.section !== 'ALL' ? 'Sec ' + cell.entry.section : '' %></span>
                                                            <span class="slot-info">üë®‚Äçüè´ <%= cell.entry.faculty %></span>
                                                            <span class="slot-info">
                                                                <% if (cell.entry.type.toLowerCase().includes('lecture')) { %>
                                                                    üìö <%= cell.entry.type %>
                                                                <% } else if (cell.entry.type.toLowerCase().includes('tutorial')) { %>
                                                                    ‚úèÔ∏è <%= cell.entry.type %>
                                                                <% } else if (cell.entry.type.toLowerCase().includes('lab')) { %>
                                                                    üî¨ <%= cell.entry.type %>
                                                                <% } else { %>
                                                                    <%= cell.entry.type %>
                                                                <% } %>
                                                            </span>
                                                        </td>
                                                    <% } else { %>
                                                        <td colspan="<%= cell.colspan %>"></td>
                                                    <% } %>
                                                <% }); %>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="no-data">No classes scheduled in First Half</div>
                        <% } %>
                    </div>

                    <!-- Second Half Content -->
                    <div id="room-<%= roomId %>-second" class="semester-content">
                        <% if (roomData.Second_Half && roomData.Second_Half.length > 0) { %>
                            <div class="timetable-header">
                                <h2 style="margin: 0;">Room <%= room %> - Second Half (Post-Mid Semester)</h2>
                                <p style="margin-top: 8px; opacity: 0.95; font-size: 1.05em;">
                                    üìä Total Slots: <%= roomData.Second_Half.length %>
                                </p>
                            </div>

                            <div class="timetable-wrapper">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>DAY</th>
                                            <% allTimeSlots.forEach(slotData => { 
                                                const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                                const slot = isBreak ? slotData.slot : slotData;
                                                const label = isBreak ? slotData.label : slot;
                                            %>
                                                <th class="<%= isBreak ? 'break-slot' : '' %>">
                                                    <%= label %>
                                                </th>
                                            <% }); %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% days.forEach(day => { 
                                            const rowData = [];
                                            const processedSlots = new Set();
                                            
                                            allTimeSlots.forEach((slotData, slotIndex) => {
                                                const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                                const slot = isBreak ? slotData.slot : slotData;
                                                
                                                if (isBreak) {
                                                    rowData.push({
                                                        isBreak: true,
                                                        colspan: 1,
                                                        slot: slot
                                                    });
                                                } else if (!processedSlots.has(slotIndex)) {
                                                    const entry = roomData.Second_Half.find(t => 
                                                        t.day === day && t.timeSlot === slot
                                                    );
                                                    
                                                    if (!entry) {
                                                        rowData.push({
                                                            isBreak: false,
                                                            colspan: 1,
                                                            entry: null
                                                        });
                                                    } else {
                                                        let colspan = 1;
                                                        const baseCourse = entry.course.split(' (')[0];
                                                        
                                                        for (let i = slotIndex + 1; i < allTimeSlots.length; i++) {
                                                            const nextSlotData = allTimeSlots[i];
                                                            const nextIsBreak = typeof nextSlotData === 'object' && nextSlotData.isBreak;
                                                            
                                                            if (nextIsBreak) break;
                                                            
                                                            const nextSlot = nextIsBreak ? nextSlotData.slot : nextSlotData;
                                                            
                                                            const nextEntry = roomData.Second_Half.find(t => 
                                                                t.day === day && t.timeSlot === nextSlot
                                                            );
                                                            
                                                            if (nextEntry) {
                                                                const nextBaseCourse = nextEntry.course.split(' (')[0];
                                                                if (nextBaseCourse === baseCourse && 
                                                                    nextEntry.faculty === entry.faculty &&
                                                                    nextEntry.branch === entry.branch) {
                                                                    colspan++;
                                                                    processedSlots.add(i);
                                                                } else {
                                                                    break;
                                                                }
                                                            } else {
                                                                break;
                                                            }
                                                        }
                                                        
                                                        rowData.push({
                                                            isBreak: false,
                                                            colspan: colspan,
                                                            entry: entry,
                                                            baseCourse: baseCourse
                                                        });
                                                        processedSlots.add(slotIndex);
                                                    }
                                                }
                                            });
                                        %>
                                            <tr>
                                                <td><%= day %></td>
                                                <% rowData.forEach(cell => { %>
                                                    <% if (cell.isBreak) { %>
                                                        <td class="break-time" colspan="<%= cell.colspan %>">üçΩÔ∏è</td>
                                                    <% } else if (cell.entry) { 
                                                        const typeStr = (cell.entry.type || '').toLowerCase();
                                                        let className = '';
                                                        if (typeStr.includes('lab')) className = 'lab';
                                                        else if (typeStr.includes('tutorial')) className = 'tutorial';
                                                        else className = 'lecture';
                                                    %>
                                                        <td class="<%= className %>" colspan="<%= cell.colspan %>">
                                                            <span class="course-name"><%= cell.baseCourse %></span>
                                                            <span class="slot-info">üéì <%= cell.entry.branch %> Year <%= cell.entry.year %> <%= cell.entry.section !== 'ALL' ? 'Sec ' + cell.entry.section : '' %></span>
                                                            <span class="slot-info">üë®‚Äçüè´ <%= cell.entry.faculty %></span>
                                                            <span class="slot-info">
                                                                <% if (cell.entry.type.toLowerCase().includes('lecture')) { %>
                                                                    üìö <%= cell.entry.type %>
                                                                <% } else if (cell.entry.type.toLowerCase().includes('tutorial')) { %>
                                                                    ‚úèÔ∏è <%= cell.entry.type %>
                                                                <% } else if (cell.entry.type.toLowerCase().includes('lab')) { %>
                                                                    üî¨ <%= cell.entry.type %>
                                                                <% } else { %>
                                                                    <%= cell.entry.type %>
                                                                <% } %>
                                                            </span>
                                                        </td>
                                                    <% } else { %>
                                                        <td colspan="<%= cell.colspan %>"></td>
                                                    <% } %>
                                                <% }); %>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="no-data">No classes scheduled in Second Half</div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <script>
        function showRoom(roomId) {
            document.querySelectorAll('.room-content').forEach(content => {
                content.classList.remove('active');
            });
            
            document.querySelectorAll('.room-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            const selectedContent = document.getElementById(roomId);
            if (selectedContent) {
                selectedContent.classList.add('active');
            }
            
            if (event && event.target) {
                const clickedElement = event.target.closest('.room-tab');
                if (clickedElement) {
                    clickedElement.classList.add('active');
                }
            }
        }

        function showSemester(semesterId) {
            const selectedContent = document.getElementById(semesterId);
            if (!selectedContent) return;
            
            const parentRoom = selectedContent.closest('.room-content');
            if (!parentRoom) return;
            
            parentRoom.querySelectorAll('.semester-content').forEach(content => {
                content.classList.remove('active');
            });
            
            parentRoom.querySelectorAll('.semester-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            selectedContent.classList.add('active');
            
            if (event && event.target) {
                const clickedElement = event.target.closest('.semester-tab');
                if (clickedElement) {
                    clickedElement.classList.add('active');
                }
            }
        }
    </script>
