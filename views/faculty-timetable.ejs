<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Timetables</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1600px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5em;
        }

        .actions {
            text-align: center;
            margin-bottom: 30px;
        }

        .btn {
            padding: 12px 30px;
            margin: 0 10px;
            border: none;
            border-radius: 25px;
            font-size: 1em;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #11998e;
            color: white;
        }

        .btn-primary:hover {
            background: #0d7a72;
            transform: translateY(-2px);
        }

        .btn-success {
            background: #28a745;
            color: white;
        }

        .btn-success:hover {
            background: #218838;
        }

        .info-box {
            background: #e7f9f5;
            border-left: 4px solid #11998e;
            padding: 15px 20px;
            margin-bottom: 25px;
            border-radius: 8px;
        }

        .info-box h3 {
            color: #11998e;
            margin-bottom: 8px;
            font-size: 1.1em;
        }

        .info-box p {
            color: #495057;
            margin: 5px 0;
        }

        /* Tabs for Faculty */
        .tabs {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 30px;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 10px;
            max-height: 400px;
            overflow-y: auto;
        }

        .tab {
            padding: 12px 25px;
            background: #f8f9fa;
            border: 2px solid #dee2e6;
            border-radius: 8px 8px 0 0;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            color: #495057;
        }

        .tab:hover {
            background: #e9ecef;
        }

        .tab.active {
            background: #11998e;
            color: white;
            border-color: #11998e;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        /* Semester Half Tabs */
        .semester-tabs {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
            justify-content: center;
        }

        .semester-tab {
            padding: 12px 40px;
            background: #f8f9fa;
            border: 2px solid #dee2e6;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            color: #495057;
            font-size: 1.1em;
        }

        .semester-tab:hover {
            background: #e9ecef;
        }

        .semester-tab.active {
            background: #38ef7d;
            color: white;
            border-color: #38ef7d;
        }

        .semester-content {
            display: none;
        }

        .semester-content.active {
            display: block;
        }

        .faculty-header {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            padding: 20px;
            border-radius: 10px 10px 0 0;
            margin-bottom: 0;
        }

        .timetable-wrapper {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 0;
            font-size: 0.85em;
        }

        th {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            padding: 15px 8px;
            text-align: center;
            font-weight: 600;
            position: sticky;
            top: 0;
            z-index: 10;
            min-width: 120px;
        }

        th:first-child {
            position: sticky;
            left: 0;
            z-index: 11;
            min-width: 100px;
        }

        th.break-slot {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            font-style: italic;
        }

        td {
            padding: 12px 8px;
            text-align: center;
            border: 1px solid #dee2e6;
            min-width: 120px;
        }

        td:first-child {
            background: #f8f9fa;
            font-weight: 600;
            color: #11998e;
            position: sticky;
            left: 0;
            z-index: 9;
        }

        td.break-time {
            background: repeating-linear-gradient(
                45deg,
                #f8f9fa,
                #f8f9fa 10px,
                #e9ecef 10px,
                #e9ecef 20px
            );
            color: #6c757d;
            font-style: italic;
            font-weight: 600;
        }

        .lecture {
            background: #cfe2ff;
            border-left: 4px solid #0d6efd;
        }

        .lab {
            background: #f8d7da;
            border-left: 4px solid #dc3545;
        }

        .tutorial {
            background: #d1e7dd;
            border-left: 4px solid #198754;
        }

        .slot-info {
            font-size: 0.75em;
            display: block;
            margin-top: 3px;
            color: #666;
        }

        .course-name {
            font-weight: 600;
            display: block;
            margin-bottom: 3px;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #666;
            font-size: 1.2em;
        }

        .legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
            flex-wrap: wrap;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.9em;
        }

        .legend-box {
            width: 20px;
            height: 20px;
            border-radius: 4px;
        }

        .stats-box {
            background: #fff3cd;
            border-left: 4px solid #ffc107;
            padding: 15px 20px;
            margin: 20px 0;
            border-radius: 8px;
        }

        .stats-box h4 {
            color: #856404;
            margin-bottom: 10px;
        }

        .stats-box p {
            color: #856404;
            margin: 5px 0;
        }

        @media print {
            body {
                background: white;
            }
            .container {
                box-shadow: none;
            }
            .actions, .tabs, .info-box, .semester-tabs {
                display: none;
            }
            .tab-content, .semester-content {
                display: block !important;
                page-break-after: always;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üë®‚Äçüè´ Faculty Timetables</h1>
        
        <div class="info-box">
            <h3>üìä Faculty Schedule View</h3>
            <p>View individual faculty schedules across both semester halves. Each faculty member's teaching load is displayed with course details, branches, and rooms.</p>
        </div>

        <div class="legend">
            <div class="legend-item">
                <div class="legend-box lecture"></div>
                <span>Lecture (90 mins)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box tutorial"></div>
                <span>Tutorial (60 mins)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box lab"></div>
                <span>Lab (120 mins)</span>
            </div>
        </div>
        
        <div class="actions">
            <a href="/view" class="btn btn-primary">‚Üê Back to Branch View</a>
            <a href="/" class="btn btn-primary">üè† Home</a>
            <button class="btn btn-success" onclick="window.location.href='/download-faculty'">üì• Download CSV</button>
            <button class="btn btn-primary" onclick="window.print()">üñ®Ô∏è Print All</button>
        </div>

        <% 
        const hasFacultyData = typeof facultyTimetables !== 'undefined' && 
                               facultyTimetables !== null && 
                               Object.keys(facultyTimetables).length > 0;
        
        // Define all time slots including breaks
        const allTimeSlots = [
            '09:00 - 10:00',
            '10:00 - 10:30',
            { slot: '10:30 - 10:45', isBreak: true, label: 'BREAK' },
            '10:45 - 11:00',
            '11:00 - 12:00',
            '12:00 - 12:15',
            '12:15 - 12:30',
            '12:30 - 13:15',
            { slot: '13:15 - 14:00', isBreak: true, label: 'LUNCH' },
            '14:00 - 14:30',
            '14:30 - 15:30',
            '15:30 - 15:40',
            '15:40 - 16:00',
            '16:00 - 16:30',
            '16:30 - 17:10',
            '17:10 - 17:30',
            '17:30 - 18:30'
        ];
        %>
        
        <% if (!hasFacultyData) { %>
            <div class="no-data">
                üî≠ No faculty timetables available yet.<br>
                Please generate a timetable first.
            </div>
        <% } else { %>
            <!-- Faculty Tabs -->
            <div class="tabs">
                <% 
                const facultyNames = Object.keys(facultyTimetables).sort();
                
                facultyNames.forEach((faculty, index) => { 
                %>
                    <div class="tab <%= index === 0 ? 'active' : '' %>" 
                         onclick="showFacultyTab('faculty-<%= index %>')">
                        <%= faculty %>
                    </div>
                <% }); %>
            </div>

            <!-- Faculty Tab Contents -->
            <% facultyNames.forEach((faculty, facultyIndex) => { 
                const data = facultyTimetables[faculty];
                const firstHalfCount = data.First_Half.length;
                const secondHalfCount = data.Second_Half.length;
            %>
                <div id="faculty-<%= facultyIndex %>" class="tab-content <%= facultyIndex === 0 ? 'active' : '' %>">
                    <div class="faculty-header">
                        <h2 style="margin: 0;">üë®‚Äçüè´ <%= faculty %></h2>
                        <p style="margin-top: 5px; opacity: 0.9;">
                            First Half: <%= firstHalfCount %> classes | Second Half: <%= secondHalfCount %> classes
                        </p>
                    </div>

                    <div class="stats-box">
                        <h4>üìà Teaching Load Summary</h4>
                        <p><strong>Total Classes:</strong> <%= firstHalfCount + secondHalfCount %></p>
                        <p><strong>First Half Semester:</strong> <%= firstHalfCount %> slot entries</p>
                        <p><strong>Second Half Semester:</strong> <%= secondHalfCount %> slot entries</p>
                    </div>

                    <!-- Semester Half Tabs -->
                    <div class="semester-tabs">
                        <div class="semester-tab active" onclick="showSemester('faculty-<%= facultyIndex %>-first')">
                            üìÖ First Half
                        </div>
                        <div class="semester-tab" onclick="showSemester('faculty-<%= facultyIndex %>-second')">
                            üìÖ Second Half
                        </div>
                    </div>

                    <!-- First Half Timetable -->
                    <div id="faculty-<%= facultyIndex %>-first" class="semester-content active">
                        <h3 style="margin: 20px 0; color: #11998e;">First Half Semester</h3>
                        <div class="timetable-wrapper">
                            <table>
                                <thead>
                                    <tr>
                                        <th>DAY</th>
                                        <% allTimeSlots.forEach(slotData => { 
                                            const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                            const slot = isBreak ? slotData.slot : slotData;
                                            const label = isBreak ? slotData.label : slot;
                                        %>
                                            <th class="<%= isBreak ? 'break-slot' : '' %>"><%= label %></th>
                                        <% }); %>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% days.forEach(day => { %>
                                        <tr>
                                            <td><%= day %></td>
                                            <% allTimeSlots.forEach(slotData => { 
                                                const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                                const slot = isBreak ? slotData.slot : slotData;
                                            %>
                                                <% if (isBreak) { %>
                                                    <td class="break-time">üçΩÔ∏è</td>
                                                <% } else { %>
                                                    <% 
                                                        const entry = data.First_Half.find(t => 
                                                            t.day === day && t.timeSlot === slot
                                                        );
                                                        let className = '';
                                                        if (entry) {
                                                            const typeStr = (entry.type || '').toLowerCase();
                                                            if (typeStr.includes('lab')) className = 'lab';
                                                            else if (typeStr.includes('tutorial')) className = 'tutorial';
                                                            else className = 'lecture';
                                                        }
                                                    %>
                                                    <td class="<%= className %>">
                                                        <% if (entry) { %>
                                                            <span class="course-name"><%= entry.course %></span>
                                                            <span class="slot-info">üéì <%= entry.branch %> Year <%= entry.year %></span>
                                                            <span class="slot-info">üè´ Room: <%= entry.room %></span>
                                                            <span class="slot-info">
                                                                <% if (entry.type.toLowerCase().includes('lecture')) { %>
                                                                    üìö <%= entry.type %>
                                                                <% } else if (entry.type.toLowerCase().includes('tutorial')) { %>
                                                                    ‚úçÔ∏è <%= entry.type %>
                                                                <% } else if (entry.type.toLowerCase().includes('lab')) { %>
                                                                    üî¨ <%= entry.type %>
                                                                <% } else { %>
                                                                    <%= entry.type %>
                                                                <% } %>
                                                            </span>
                                                        <% } %>
                                                    </td>
                                                <% } %>
                                            <% }); %>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Second Half Timetable -->
                    <div id="faculty-<%= facultyIndex %>-second" class="semester-content">
                        <h3 style="margin: 20px 0; color: #11998e;">Second Half Semester</h3>
                        <div class="timetable-wrapper">
                            <table>
                                <thead>
                                    <tr>
                                        <th>DAY</th>
                                        <% allTimeSlots.forEach(slotData => { 
                                            const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                            const slot = isBreak ? slotData.slot : slotData;
                                            const label = isBreak ? slotData.label : slot;
                                        %>
                                            <th class="<%= isBreak ? 'break-slot' : '' %>"><%= label %></th>
                                        <% }); %>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% days.forEach(day => { %>
                                        <tr>
                                            <td><%= day %></td>
                                            <% allTimeSlots.forEach(slotData => { 
                                                const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                                const slot = isBreak ? slotData.slot : slotData;
                                            %>
                                                <% if (isBreak) { %>
                                                    <td class="break-time">üçΩÔ∏è</td>
                                                <% } else { %>
                                                    <% 
                                                        const entry = data.Second_Half.find(t => 
                                                            t.day === day && t.timeSlot === slot
                                                        );
                                                        let className = '';
                                                        if (entry) {
                                                            const typeStr = (entry.type || '').toLowerCase();
                                                            if (typeStr.includes('lab')) className = 'lab';
                                                            else if (typeStr.includes('tutorial')) className = 'tutorial';
                                                            else className = 'lecture';
                                                        }
                                                    %>
                                                    <td class="<%= className %>">
                                                        <% if (entry) { %>
                                                            <span class="course-name"><%= entry.course %></span>
                                                            <span class="slot-info">üéì <%= entry.branch %> Year <%= entry.year %></span>
                                                            <span class="slot-info">üè´ Room: <%= entry.room %></span>
                                                            <span class="slot-info">
                                                                <% if (entry.type.toLowerCase().includes('lecture')) { %>
                                                                    üìö <%= entry.type %>
                                                                <% } else if (entry.type.toLowerCase().includes('tutorial')) { %>
                                                                    ‚úçÔ∏è <%= entry.type %>
                                                                <% } else if (entry.type.toLowerCase().includes('lab')) { %>
                                                                    üî¨ <%= entry.type %>
                                                                <% } else { %>
                                                                    <%= entry.type %>
                                                                <% } %>
                                                            </span>
                                                        <% } %>
                                                    </td>
                                                <% } %>
                                            <% }); %>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <script>
        function showFacultyTab(tabId) {
            // Hide all faculty tab contents
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Remove active class from all faculty tabs
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected faculty tab content
            const selectedContent = document.getElementById(tabId);
            if (selectedContent) {
                selectedContent.classList.add('active');
            }
            
            // Add active class to clicked tab
            if (event && event.target) {
                event.target.classList.add('active');
            }
        }

        function showSemester(semesterId) {
            // Get parent faculty tab
            const parentTab = document.getElementById(semesterId).closest('.tab-content');
            
            // Hide all semester contents within this faculty tab
            parentTab.querySelectorAll('.semester-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Remove active class from all semester tabs within this faculty tab
            parentTab.querySelectorAll('.semester-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected semester content
            const selectedContent = document.getElementById(semesterId);
            if (selectedContent) {
                selectedContent.classList.add('active');
            }
            
            // Add active class to clicked semester tab
            if (event && event.target) {
                event.target.classList.add('active');
            }
        }
    </script>
</body>
</html>