<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Timetable</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1800px;
            margin: 0 auto;
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5em;
        }

        .actions {
            text-align: center;
            margin-bottom: 30px;
        }

        .btn {
            padding: 12px 30px;
            margin: 0 10px;
            border: none;
            border-radius: 25px;
            font-size: 1em;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #764ba2;
            transform: translateY(-2px);
        }

        .btn-success {
            background: #28a745;
            color: white;
        }

        .btn-success:hover {
            background: #218838;
        }

        .info-box {
            background: #e7f3ff;
            border-left: 4px solid #0d6efd;
            padding: 15px 20px;
            margin-bottom: 25px;
            border-radius: 8px;
        }

        .info-box h3 {
            color: #0d6efd;
            margin-bottom: 8px;
            font-size: 1.1em;
        }

        .info-box ul {
            margin-left: 20px;
            color: #495057;
        }

        .info-box li {
            margin: 5px 0;
        }

        /* Year Tabs - Main Level */
        .year-tabs {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
            border-bottom: 3px solid #e9ecef;
            padding-bottom: 10px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .year-tab {
            padding: 15px 40px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: 3px solid #dee2e6;
            border-radius: 12px 12px 0 0;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 700;
            font-size: 1.2em;
            color: #495057;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .year-tab:hover {
            background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
            transform: translateY(-2px);
        }

        .year-tab.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-color: #667eea;
            box-shadow: 0 4px 8px rgba(102, 126, 234, 0.3);
        }

        .year-content {
            display: none;
        }

        .year-content.active {
            display: block;
            animation: fadeIn 0.3s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Branch Tabs - Second Level */
        .branch-tabs {
            display: flex;
            gap: 12px;
            margin: 25px 0;
            padding: 0 20px;
            flex-wrap: wrap;
        }

        .branch-tab {
            padding: 12px 30px;
            background: #f8f9fa;
            border: 2px solid #dee2e6;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            font-size: 1.05em;
            color: #495057;
            flex: 1;
            min-width: 150px;
            text-align: center;
        }

        .branch-tab:hover {
            background: #e9ecef;
            border-color: #adb5bd;
        }

        .branch-tab.active.cse {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            border-color: #007bff;
        }

        .branch-tab.active.dsai {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
            color: white;
            border-color: #28a745;
        }

        .branch-tab.active.ece {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
            border-color: #dc3545;
        }

        .branch-content {
            display: none;
        }

        .branch-content.active {
            display: block;
            animation: slideIn 0.3s ease-out;
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateX(-20px); }
            to { opacity: 1; transform: translateX(0); }
        }

        /* Semester Half Tabs - Third Level */
        .semester-tabs {
            display: flex;
            gap: 15px;
            margin: 20px 0;
            justify-content: center;
        }

        .semester-tab {
            padding: 12px 50px;
            background: #fff3cd;
            border: 2px solid #ffc107;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            font-size: 1.1em;
            color: #856404;
        }

        .semester-tab:hover {
            background: #ffe69c;
            border-color: #ffb800;
        }

        .semester-tab.active {
            background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
            color: white;
            border-color: #ffc107;
            box-shadow: 0 3px 6px rgba(255, 193, 7, 0.4);
        }

        .semester-content {
            display: none;
        }

        .semester-content.active {
            display: block;
            animation: fadeIn 0.3s ease-in;
        }

        .timetable-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px 10px 0 0;
            margin-bottom: 0;
            margin-top: 20px;
        }

        .timetable-header.cse {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }

        .timetable-header.dsai {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
        }

        .timetable-header.ece {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .timetable-wrapper {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 0;
            font-size: 0.85em;
        }

        th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px 8px;
            text-align: center;
            font-weight: 600;
            position: sticky;
            top: 0;
            z-index: 10;
            min-width: 120px;
        }

        th:first-child {
            position: sticky;
            left: 0;
            z-index: 11;
            min-width: 100px;
        }

        th.break-slot {
            background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
            font-style: italic;
        }

        td {
            padding: 12px 8px;
            text-align: center;
            border: 1px solid #dee2e6;
            min-width: 120px;
            vertical-align: middle;
        }

        td:first-child {
            background: #f8f9fa;
            font-weight: 600;
            color: #667eea;
            position: sticky;
            left: 0;
            z-index: 9;
        }

        /* Merged cell styling */
        td[colspan]:not([colspan="1"]) {
            font-size: 0.95em;
            padding: 15px 10px;
        }

        td[colspan]:not([colspan="1"]) .course-name {
            font-size: 1.15em;
            font-weight: 700;
        }

        td.break-time {
            background: repeating-linear-gradient(
                45deg,
                #f8f9fa,
                #f8f9fa 10px,
                #e9ecef 10px,
                #e9ecef 20px
            );
            color: #6c757d;
            font-style: italic;
            font-weight: 600;
        }

        .lecture {
            background: #cfe2ff;
            border-left: 4px solid #0d6efd;
        }

        .lab {
            background: #f8d7da;
            border-left: 4px solid #dc3545;
        }

        .tutorial {
            background: #d1e7dd;
            border-left: 4px solid #198754;
        }

        /* Elective cell styling */
        .elective-cell {
            background: linear-gradient(135deg, #e0d4f7 0%, #d4bbf0 100%);
            border-left: 4px solid #9b59b6;
        }

        .elective-dropdown-container {
            margin-top: 8px;
        }

        .elective-select {
            width: 100%;
            padding: 8px 10px;
            border: 2px solid #9b59b6;
            border-radius: 6px;
            background: white;
            font-size: 0.9em;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 8px;
        }

        .elective-select:hover {
            border-color: #8e44ad;
            box-shadow: 0 2px 5px rgba(155, 89, 182, 0.3);
        }

        .elective-select:focus {
            outline: none;
            border-color: #8e44ad;
            box-shadow: 0 0 0 3px rgba(155, 89, 182, 0.2);
        }

        .elective-details {
            padding: 8px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 5px;
            margin-top: 5px;
        }

        .elective-details .slot-info {
            display: block;
            margin: 3px 0;
        }

        .slot-info {
            font-size: 0.75em;
            display: block;
            margin-top: 3px;
            color: #666;
        }

        .course-name {
            font-weight: 600;
            display: block;
            margin-bottom: 3px;
        }

        .no-data {
            text-align: center;
            padding: 40px;
            color: #666;
            font-size: 1.2em;
        }

        .legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 20px 0;
            flex-wrap: wrap;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.9em;
        }

        .legend-box {
            width: 20px;
            height: 20px;
            border-radius: 4px;
        }

        @media print {
            body {
                background: white;
            }
            .container {
                box-shadow: none;
            }
            .actions, .year-tabs, .branch-tabs, .semester-tabs, .info-box {
                display: none;
            }
            .year-content, .branch-content, .semester-content {
                display: block !important;
                page-break-after: always;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üìÖ Class Timetables - Hierarchical View</h1>
        
        <div class="info-box">
            <h3>üìã Duration-Based Scheduling with Semester Split</h3>
            <ul>
                <li><strong>Regular Courses:</strong> 2 Lectures (90 minutes each) + 1 Tutorial (60 minutes) - Each on different days</li>
                <li><strong>Lab Courses:</strong> 1 Lab session (120 minutes = 2 hours)</li>
                <li><strong>Elective Courses:</strong> Multiple options shown with dropdown - Select your elective to view room details</li>
                <li><strong>Smart Slot Allocation:</strong> System automatically finds consecutive time slots matching required duration</li>
                <li><strong>Different Days Enforcement:</strong> All sessions of a course are scheduled on separate days to avoid student fatigue</li>
                <li><strong>Pre-Mid Semester (First Half):</strong> High-credit courses (3-4 credits) - Core subjects with intensive coverage</li>
                <li><strong>Post-Mid Semester (Second Half):</strong> Lower-credit courses (1-2 credits) - New lightweight courses + continued low-credit courses</li>
                <li><strong>Credit-Based Filtering:</strong> High-credit courses (‚â•3 credits) from first half are automatically dropped and replaced with new courses</li>
            </ul>
        </div>

        <div class="legend">
            <div class="legend-item">
                <div class="legend-box lecture"></div>
                <span>Lecture (90 mins)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box tutorial"></div>
                <span>Tutorial (60 mins)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box lab"></div>
                <span>Lab (120 mins)</span>
            </div>
            <div class="legend-item">
                <div class="legend-box" style="background: linear-gradient(135deg, #e0d4f7 0%, #d4bbf0 100%); border: 2px solid #9b59b6;"></div>
                <span>Elective (Choose yours)</span>
            </div>
        </div>
        
        <div class="actions">
            <a href="/" class="btn btn-primary">‚Üê Back to Upload</a>
            <a href="/view-faculty" class="btn btn-primary">üë®‚Äçüè´ Faculty Timetables</a>
            <a href="/view-classrooms" class="btn btn-primary">üè´ Classroom Timetables</a>
            <button class="btn btn-success" onclick="window.location.href='/download'">üì• Download CSV</button>
            <button class="btn btn-primary" onclick="window.print()">üñ®Ô∏è Print All</button>
        </div>

        <% 
        const hasGroupedData = typeof groupedByBranchYear !== 'undefined' && 
                               groupedByBranchYear !== null && 
                               Object.keys(groupedByBranchYear).length > 0;
        
        const allTimeSlots = [
            '09:00 - 10:00',
            '10:00 - 10:30',
            { slot: '10:30 - 10:45', isBreak: true, label: 'BREAK' },
            '10:45 - 11:00',
            '11:00 - 12:00',
            '12:00 - 12:15',
            '12:15 - 12:30',
            '12:30 - 13:15',
            { slot: '13:15 - 14:00', isBreak: true, label: 'LUNCH' },
            '14:00 - 14:30',
            '14:30 - 15:30',
            '15:30 - 15:40',
            '15:40 - 16:00',
            '16:00 - 16:30',
            '16:30 - 17:10'
        ];
        %>
        
        <% if (!hasGroupedData) { %>
            <div class="no-data">
                üî≠ No timetable generated yet.<br>
                Please upload data and generate a timetable first.
            </div>
        <% } else { %>
            <%
            // Organize data: Year -> Branch -> Section -> SemesterHalf
            const hierarchy = {};
            
            Object.keys(groupedByBranchYear).forEach(key => {
                const data = groupedByBranchYear[key];
                const year = data.year;
                const branch = data.branch;
                const section = data.section || '';
                const semesterHalf = data.semesterHalf;
                
                if (!hierarchy[year]) {
                    hierarchy[year] = {};
                }
                if (!hierarchy[year][branch]) {
                    hierarchy[year][branch] = {};
                }
                if (!hierarchy[year][branch][section]) {
                    hierarchy[year][branch][section] = {};
                }
                hierarchy[year][branch][section][semesterHalf] = data;
            });
            
            const years = Object.keys(hierarchy).sort((a, b) => parseInt(a) - parseInt(b));
            %>

            <!-- Year Tabs -->
            <div class="year-tabs">
                <% years.forEach((year, yearIndex) => { %>
                    <div class="year-tab <%= yearIndex === 0 ? 'active' : '' %>" 
                         onclick="showYear('year-<%= year %>')">
                        üìö Year <%= year %>
                    </div>
                <% }); %>
            </div>

            <!-- Year Contents -->
            <% years.forEach((year, yearIndex) => { 
                const branches = Object.keys(hierarchy[year]).sort();
            %>
                <div id="year-<%= year %>" class="year-content <%= yearIndex === 0 ? 'active' : '' %>">
                    
                    <!-- Branch Tabs -->
                    <div class="branch-tabs">
                        <% branches.forEach((branch, branchIndex) => { 
                            const branchClass = branch.toLowerCase().replace(/[^a-z]/g, '');
                            const sections = Object.keys(hierarchy[year][branch]).sort();
                            
                            // Calculate total slots for all sections in this branch
                            let totalSlots = 0;
                            sections.forEach(section => {
                                const sectionData = hierarchy[year][branch][section];
                                if (sectionData) {
                                    Object.values(sectionData).forEach(semData => {
                                        if (semData && semData.entries) {
                                            totalSlots += semData.entries.length;
                                        }
                                    });
                                }
                            });
                        %>
                            <div class="branch-tab <%= branchClass %> <%= branchIndex === 0 ? 'active' : '' %>" 
                                 onclick="showBranch('year-<%= year %>-branch-<%= branch %>')">
                                <%= branch %>
                                <div style="font-size: 0.85em; opacity: 0.9; margin-top: 3px;">
                                    <% if (sections.length > 1 && sections.filter(s => s !== '').length > 0) { %>
                                        <%= sections.filter(s => s !== '').length %> sections | <%= totalSlots %> slots
                                    <% } else { %>
                                        <%= totalSlots %> slots
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <!-- Branch Contents -->
                    <% branches.forEach((branch, branchIndex) => { 
                        const branchClass = branch.toLowerCase().replace(/[^a-z]/g, '');
                        const sections = Object.keys(hierarchy[year][branch]).sort();
                    %>
                        <div id="year-<%= year %>-branch-<%= branch %>" 
                             class="branch-content <%= branchIndex === 0 ? 'active' : '' %>">
                            
                            <% sections.forEach((section, sectionIndex) => { 
                                const sectionData = hierarchy[year][branch][section];
                                const semesterHalves = ['First_Half', 'Second_Half'].filter(sh => 
                                    sectionData && sectionData[sh] && sectionData[sh].entries
                                );
                                
                                if (semesterHalves.length === 0) return;
                            %>
                                <!-- Semester Half Tabs -->
                                <div class="semester-tabs">
                                    <% semesterHalves.forEach((semHalf, semIndex) => { 
                                        const semLabel = semHalf === 'First_Half' ? 'üìÖ First Half (Pre-Mid)' : 'üìÖ Second Half (Post-Mid)';
                                        const data = sectionData[semHalf];
                                    %>
                                        <div class="semester-tab <%= semIndex === 0 ? 'active' : '' %>" 
                                             onclick="showSemester('year-<%= year %>-branch-<%= branch %>-sec-<%= section %>-sem-<%= semHalf %>')">
                                            <%= semLabel %>
                                            <% if (section) { %> - Section <%= section %><% } %>
                                            <div style="font-size: 0.85em; opacity: 0.95; margin-top: 3px;">
                                                <%= data.entries ? data.entries.length : 0 %> classes
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>

                                <!-- Semester Half Contents -->
                                <% semesterHalves.forEach((semHalf, semIndex) => { 
                                    const data = sectionData[semHalf];
                                    if (!data || !data.entries) return;
                                    
                                    const uniqueCourses = new Set(data.entries.map(entry => {
                                        return entry.course.split(' - ')[0].split(' (')[0];
                                    }));
                                %>
                                    <div id="year-<%= year %>-branch-<%= branch %>-sec-<%= section %>-sem-<%= semHalf %>" 
                                         class="semester-content <%= semIndex === 0 ? 'active' : '' %>">
                                        
                                        <div class="timetable-header <%= branchClass %>">
                                            <h2 style="margin: 0;">
                                                <%= branch %> - Year <%= year %> 
                                                <% if (section) { %> - Section <%= section %><% } %>
                                                (<%= semHalf.replace('_', ' ') %>)
                                            </h2>
                                            <p style="margin-top: 8px; opacity: 0.95; font-size: 1.05em;">
                                                üìö Courses: <%= uniqueCourses.size %> | 
                                                üìä Total Slots: <%= data.entries.length %> |
                                                üí° <%= semHalf === 'First_Half' ? 'High-credit intensive courses' : 'Lighter elective courses' %>
                                            </p>
                                        </div>

                                        <div class="timetable-wrapper">
                                            <table>
                                                <thead>
                                                    <tr>
                                                        <th>DAY</th>
                                                        <% allTimeSlots.forEach(slotData => { 
                                                            const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                                            const slot = isBreak ? slotData.slot : slotData;
                                                            const label = isBreak ? slotData.label : slot;
                                                        %>
                                                            <th class="<%= isBreak ? 'break-slot' : '' %>">
                                                                <%= label %>
                                                            </th>
                                                        <% }); %>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% days.forEach(day => { 
                                                        // Build row data with merged cells
                                                        const rowData = [];
                                                        const processedSlots = new Set();
                                                        
                                                        allTimeSlots.forEach((slotData, slotIndex) => {
                                                            const isBreak = typeof slotData === 'object' && slotData.isBreak;
                                                            const slot = isBreak ? slotData.slot : slotData;
                                                            
                                                            if (isBreak) {
                                                                rowData.push({
                                                                    isBreak: true,
                                                                    colspan: 1,
                                                                    slot: slot
                                                                });
                                                            } else if (!processedSlots.has(slotIndex)) {
                                                                // Check if this slot has any entries
                                                                const allEntriesForSlot = data.entries.filter(t => 
                                                                    t.day === day && t.timeSlot === slot
                                                                );
                                                                
                                                                if (allEntriesForSlot.length === 0) {
                                                                    // Empty slot
                                                                    rowData.push({
                                                                        isBreak: false,
                                                                        colspan: 1,
                                                                        entry: null
                                                                    });
                                                                } else {
                                                                    // Get the first entry
                                                                    const entry = allEntriesForSlot[0];
                                                                    // Check if this is an elective: Is Shared must be TRUE AND Shared With must contain "Elective"
                                                                    const sharedWith = entry['Shared With'] || entry.sharedWith || '';
                                                                    const isShared = entry['Is Shared'] === 'TRUE' || 
                                                                                   entry['Is Shared'] === true ||
                                                                                   entry.isShared === 'TRUE' || 
                                                                                   entry.isShared === true;
                                                                    const isElective = isShared && (sharedWith.includes('Elective') || sharedWith.includes('elective'));
                                                                    
                                                                    // Debug logging
                                                                    if (allEntriesForSlot.length > 1) {
                                                                        console.log('Multiple entries at slot:', {
                                                                            day: day,
                                                                            slot: slot,
                                                                            count: allEntriesForSlot.length,
                                                                            isElective: isElective,
                                                                            isShared: isShared,
                                                                            sharedWith: sharedWith,
                                                                            courses: allEntriesForSlot.map(e => e.course)
                                                                        });
                                                                    }
                                                                    
                                                                    if (isElective) {
                                                                        // For electives, check if next slots also have the same elective group
                                                                        let colspan = 1;
                                                                        const electiveGroup = entry['Shared With'] || entry.sharedWith || entry.electiveGroup;
                                                                        
                                                                        for (let i = slotIndex + 1; i < allTimeSlots.length; i++) {
                                                                            const nextSlotData = allTimeSlots[i];
                                                                            const nextIsBreak = typeof nextSlotData === 'object' && nextSlotData.isBreak;
                                                                            
                                                                            if (nextIsBreak) break;
                                                                            
                                                                            const nextSlot = nextIsBreak ? nextSlotData.slot : nextSlotData;
                                                                            
                                                                            const nextElectives = data.entries.filter(t => {
                                                                                const nextSharedWith = t['Shared With'] || t.sharedWith || '';
                                                                                const nextIsShared = t['Is Shared'] === 'TRUE' || t['Is Shared'] === true || 
                                                                                                   t.isShared === 'TRUE' || t.isShared === true;
                                                                                const nextIsElective = nextIsShared && (nextSharedWith.includes('Elective') || nextSharedWith.includes('elective'));
                                                                                
                                                                                return t.day === day && 
                                                                                       t.timeSlot === nextSlot &&
                                                                                       nextIsElective &&
                                                                                       (t['Shared With'] || t.sharedWith || t.electiveGroup) === electiveGroup;
                                                                            });
                                                                            
                                                                            if (nextElectives.length > 0) {
                                                                                colspan++;
                                                                                processedSlots.add(i);
                                                                            } else {
                                                                                break;
                                                                            }
                                                                        }
                                                                        
                                                                        rowData.push({
                                                                            isBreak: false,
                                                                            colspan: colspan,
                                                                            entry: entry,
                                                                            baseCourse: entry.course.split(' (')[0],
                                                                            isElective: true
                                                                        });
                                                                        processedSlots.add(slotIndex);
                                                                    } else {
                                                                        // For non-electives, check for continuous slots with same course
                                                                        let colspan = 1;
                                                                        const baseCourse = entry.course.split(' (')[0];
                                                                        
                                                                        for (let i = slotIndex + 1; i < allTimeSlots.length; i++) {
                                                                            const nextSlotData = allTimeSlots[i];
                                                                            const nextIsBreak = typeof nextSlotData === 'object' && nextSlotData.isBreak;
                                                                            
                                                                            if (nextIsBreak) break;
                                                                            
                                                                            const nextSlot = nextIsBreak ? nextSlotData.slot : nextSlotData;
                                                                            
                                                                            const nextEntry = data.entries.find(t => 
                                                                                t.day === day && t.timeSlot === nextSlot
                                                                            );
                                                                            
                                                                            if (nextEntry) {
                                                                                const nextBaseCourse = nextEntry.course.split(' (')[0];
                                                                                if (nextBaseCourse === baseCourse && 
                                                                                    nextEntry.faculty === entry.faculty &&
                                                                                    nextEntry.room === entry.room) {
                                                                                    colspan++;
                                                                                    processedSlots.add(i);
                                                                                } else {
                                                                                    break;
                                                                                }
                                                                            } else {
                                                                                break;
                                                                            }
                                                                        }
                                                                        
                                                                        rowData.push({
                                                                            isBreak: false,
                                                                            colspan: colspan,
                                                                            entry: entry,
                                                                            baseCourse: baseCourse,
                                                                            isElective: false
                                                                        });
                                                                        processedSlots.add(slotIndex);
                                                                    }
                                                                }
                                                            }
                                                        });
                                                    %>
                                                        <tr>
                                                            <td><%= day %></td>
                                                            <% rowData.forEach(cell => { %>
                                                                <% if (cell.isBreak) { %>
                                                                    <td class="break-time" colspan="<%= cell.colspan %>">üçΩÔ∏è</td>
                                                                <% } else if (cell.entry) { 
                                                                    const typeStr = (cell.entry.type || '').toLowerCase();
                                                                    let className = '';
                                                                    if (typeStr.includes('lab')) className = 'lab';
                                                                    else if (typeStr.includes('tutorial')) className = 'tutorial';
                                                                    else className = 'lecture';
                                                                    
                                                                    // Check if this is an elective (from our rowData processing)
                                                                    const isElective = cell.isElective || false;
                                                                    
                                                                    // If elective, find all electives for this time slot and day
                                                                    let electiveOptions = [];
                                                                    if (isElective) {
                                                                        // Get all time slots covered by this cell's colspan
                                                                        const startSlotIndex = allTimeSlots.findIndex(s => {
                                                                            const slot = typeof s === 'object' ? s.slot : s;
                                                                            return slot === cell.entry.timeSlot;
                                                                        });
                                                                        
                                                                        // Collect all electives across all time slots in this merged cell
                                                                        const electiveSet = new Map();
                                                                        const electiveGroup = cell.entry['Shared With'] || cell.entry.sharedWith || cell.entry.electiveGroup;
                                                                        
                                                                        for (let i = 0; i < cell.colspan; i++) {
                                                                            const slotData = allTimeSlots[startSlotIndex + i];
                                                                            if (!slotData || (typeof slotData === 'object' && slotData.isBreak)) continue;
                                                                            
                                                                            const currentSlot = typeof slotData === 'object' ? slotData.slot : slotData;
                                                                            const electivesInSlot = data.entries.filter(e => {
                                                                                const eSharedWith = e['Shared With'] || e.sharedWith || '';
                                                                                const eIsShared = e['Is Shared'] === 'TRUE' || e['Is Shared'] === true || 
                                                                                                e.isShared === 'TRUE' || e.isShared === true;
                                                                                const eIsElective = eIsShared && (eSharedWith.includes('Elective') || eSharedWith.includes('elective'));
                                                                                
                                                                                return e.day === cell.entry.day && 
                                                                                       e.timeSlot === currentSlot &&
                                                                                       eIsElective &&
                                                                                       (e['Shared With'] || e.sharedWith || e.electiveGroup) === electiveGroup;
                                                                            });
                                                                            
                                                                            electivesInSlot.forEach(e => {
                                                                                const courseKey = e.course.split(' - ')[0].split(' (')[0];
                                                                                if (!electiveSet.has(courseKey)) {
                                                                                    electiveSet.set(courseKey, e);
                                                                                }
                                                                            });
                                                                        }
                                                                        
                                                                        electiveOptions = Array.from(electiveSet.values());
                                                                    }
                                                                %>
                                                                    <td class="<%= className %> <%= isElective ? 'elective-cell' : '' %>" colspan="<%= cell.colspan %>">
                                                                        <% if (isElective && electiveOptions.length > 0) { %>
                                                                            <span class="course-name">üéì Elective</span>
                                                                            <span class="slot-info"><%= cell.entry['Shared With'] || cell.entry.sharedWith || cell.entry.electiveGroup || 'Cross-Branch Elective' %></span>
                                                                            <span class="slot-info" style="font-size: 0.7em; opacity: 0.8;"><%= electiveOptions.length %> options available</span>
                                                                            <div class="elective-dropdown-container">
                                                                                <select class="elective-select" onchange="updateElectiveDisplay(this)">
                                                                                    <option value="">üìö Select your elective...</option>
                                                                                    <% electiveOptions.forEach((option, optIndex) => { 
                                                                                        const optionBaseCourse = option.course.split(' - ')[0].split(' (')[0];
                                                                                    %>
                                                                                        <option value="<%= optIndex %>" 
                                                                                                data-course="<%= optionBaseCourse %>"
                                                                                                data-faculty="<%= option.faculty %>"
                                                                                                data-room="<%= option.room %>">
                                                                                            <%= optionBaseCourse %>
                                                                                        </option>
                                                                                    <% }); %>
                                                                                </select>
                                                                                <div class="elective-details" style="display: none;">
                                                                                    <span class="slot-info elective-faculty"></span>
                                                                                    <span class="slot-info elective-room"></span>
                                                                                </div>
                                                                            </div>
                                                                        <% } else { %>
                                                                            <span class="course-name"><%= cell.baseCourse %></span>
                                                                            <span class="slot-info">üë®‚Äçüè´ <%= cell.entry.faculty %></span>
                                                                            <span class="slot-info">üè´ Room: <%= cell.entry.room %></span>
                                                                            <span class="slot-info">
                                                                                <% if (cell.entry.type.toLowerCase().includes('lecture')) { %>
                                                                                    üìö <%= cell.entry.type %>
                                                                                <% } else if (cell.entry.type.toLowerCase().includes('tutorial')) { %>
                                                                                    ‚úèÔ∏è <%= cell.entry.type %>
                                                                                <% } else if (cell.entry.type.toLowerCase().includes('lab')) { %>
                                                                                    üî¨ <%= cell.entry.type %>
                                                                                <% } else { %>
                                                                                    <%= cell.entry.type %>
                                                                                <% } %>
                                                                            </span>
                                                                        <% } %>
                                                                    </td>
                                                                <% } else { %>
                                                                    <td colspan="<%= cell.colspan %>"></td>
                                                                <% } %>
                                                            <% }); %>
                                                        </tr>
                                                    <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                <% }); %>
                            <% }); %>
                        </div>
                    <% }); %>
                </div>
            <% }); %>
        <% } %>
    </div>

    <script>
        function showYear(yearId) {
            document.querySelectorAll('.year-content').forEach(content => {
                content.classList.remove('active');
            });
            
            document.querySelectorAll('.year-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            const selectedContent = document.getElementById(yearId);
            if (selectedContent) {
                selectedContent.classList.add('active');
            }
            
            if (event && event.target) {
                event.target.classList.add('active');
            }
        }

        function showBranch(branchId) {
            const parentYear = document.getElementById(branchId).closest('.year-content');
            
            parentYear.querySelectorAll('.branch-content').forEach(content => {
                content.classList.remove('active');
            });
            
            parentYear.querySelectorAll('.branch-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            const selectedContent = document.getElementById(branchId);
            if (selectedContent) {
                selectedContent.classList.add('active');
            }
            
            if (event && event.target) {
                event.target.classList.add('active');
            }
        }

        function showSection(sectionId) {
            const parentBranch = document.getElementById(sectionId).closest('.branch-content');
            
            parentBranch.querySelectorAll('.section-content').forEach(content => {
                content.classList.remove('active');
            });
            
            parentBranch.querySelectorAll('.semester-tab[onclick*="showSection"]').forEach(tab => {
                tab.classList.remove('active');
            });
            
            const selectedContent = document.getElementById(sectionId);
            if (selectedContent) {
                selectedContent.classList.add('active');
            }
            
            if (event && event.target && event.target.getAttribute('onclick').includes('showSection')) {
                event.target.classList.add('active');
            }
        }

        function showSemester(semesterId) {
            // Find the selected content element
            const selectedContent = document.getElementById(semesterId);
            if (!selectedContent) return;
            
            // Find the parent branch content
            const parentBranch = selectedContent.closest('.branch-content');
            if (!parentBranch) return;
            
            // Hide all semester contents in this branch
            parentBranch.querySelectorAll('.semester-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Deactivate all semester tabs in this branch
            parentBranch.querySelectorAll('.semester-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected semester content
            selectedContent.classList.add('active');
            
            // Activate clicked tab
            if (event && event.target) {
                const clickedElement = event.target.closest('.semester-tab');
                if (clickedElement) {
                    clickedElement.classList.add('active');
                }
            }
        }

        function updateElectiveDisplay(selectElement) {
            const selectedOption = selectElement.options[selectElement.selectedIndex];
            const detailsDiv = selectElement.closest('.elective-dropdown-container').querySelector('.elective-details');
            const facultySpan = detailsDiv.querySelector('.elective-faculty');
            const roomSpan = detailsDiv.querySelector('.elective-room');
            
            if (selectedOption.value === '') {
                // No selection - hide details
                detailsDiv.style.display = 'none';
            } else {
                // Show selected elective details
                const course = selectedOption.dataset.course;
                const faculty = selectedOption.dataset.faculty;
                const room = selectedOption.dataset.room;
                
                facultySpan.textContent = 'üë®‚Äçüè´ ' + faculty;
                roomSpan.textContent = 'üè´ Room: ' + room;
                
                detailsDiv.style.display = 'block';
            }
        }
    </script>
</body>
</html>
